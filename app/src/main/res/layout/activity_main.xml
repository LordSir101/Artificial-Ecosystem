<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/instructions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="Add traits to your species"
        android:textSize="48sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/speedPts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/instructions"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginBottom="230dp"
        android:background="@drawable/textview_border"
        android:gravity="center_horizontal"
        android:paddingHorizontal="10dp"
        android:text="0"
        android:textAlignment="center"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/sensePts"
        app:layout_constraintStart_toStartOf="@+id/guideline"
        app:layout_constraintTop_toBottomOf="@+id/instructions" />

    <TextView
        android:id="@+id/sensePts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/instructions"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="230dp"
        android:layout_toRightOf="@id/speedPts"
        android:background="@drawable/textview_border"
        android:gravity="center_horizontal"
        android:paddingHorizontal="10dp"
        android:text="0"
        android:textAlignment="center"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/instructions" />

    <TextView
        android:id="@+id/breedPts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/instructions"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="230dp"
        android:layout_toRightOf="@id/sensePts"
        android:background="@drawable/textview_border"
        android:gravity="center_horizontal"
        android:paddingHorizontal="10dp"
        android:text="0"
        android:textAlignment="center"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/sensePts"
        app:layout_constraintTop_toBottomOf="@+id/instructions" />

    <ImageView
        android:id="@+id/speedInc"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_below="@+id/instructions"
        android:layout_marginTop="30dp"
        android:layout_toRightOf="@+id/speedPts"
        android:src="@drawable/ic_keyboard_arrow_up_black_24dp"
        app:layout_constraintStart_toEndOf="@+id/speedPts"
        app:layout_constraintTop_toBottomOf="@+id/instructions" />

    <ImageView
        android:id="@+id/breedInc"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_below="@+id/instructions"
        android:layout_marginTop="28dp"
        android:layout_toRightOf="@id/breedPts"
        android:src="@drawable/ic_keyboard_arrow_up_black_24dp"
        app:layout_constraintStart_toEndOf="@+id/breedPts"
        app:layout_constraintTop_toBottomOf="@+id/instructions" />

    <ImageView
        android:id="@+id/senseInc"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_below="@id/instructions"
        android:layout_marginTop="30dp"
        android:layout_toRightOf="@id/sensePts"
        android:src="@drawable/ic_keyboard_arrow_up_black_24dp"
        app:layout_constraintStart_toEndOf="@+id/sensePts"
        app:layout_constraintTop_toBottomOf="@+id/instructions" />

    <TextView
        android:id="@+id/speedTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/speedPts"
        android:layout_marginEnd="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginBottom="130dp"
        android:text="Speed"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/sensePts"
        app:layout_constraintStart_toStartOf="@+id/guideline"
        app:layout_constraintTop_toBottomOf="@+id/speedPts" />

    <TextView
        android:id="@+id/senseTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/sensePts"
        android:layout_marginBottom="130dp"
        android:layout_toRightOf="@id/speedTxt"
        android:text="Sense"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sensePts" />

    <TextView
        android:id="@+id/breedTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/breedPts"
        android:layout_marginBottom="130dp"
        android:layout_toRightOf="@id/senseTxt"
        android:text="Breed"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/senseTxt"
        app:layout_constraintTop_toBottomOf="@+id/breedPts" />

    <ImageView
        android:id="@+id/speedDec"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_below="@+id/speedInc"
        android:layout_toRightOf="@id/speedPts"
        android:src="@drawable/ic_keyboard_arrow_down_black_24dp"
        app:layout_constraintStart_toEndOf="@+id/speedPts"
        app:layout_constraintTop_toBottomOf="@+id/speedInc" />

    <ImageView
        android:id="@+id/breedDec"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_below="@+id/breedInc"
        android:layout_toRightOf="@id/breedPts"
        android:src="@drawable/ic_keyboard_arrow_down_black_24dp"
        app:layout_constraintStart_toEndOf="@+id/breedPts"
        app:layout_constraintTop_toBottomOf="@+id/breedInc" />

    <ImageView
        android:id="@+id/senseDec"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_below="@+id/senseInc"
        android:layout_toRightOf="@id/sensePts"
        android:src="@drawable/ic_keyboard_arrow_down_black_24dp"
        app:layout_constraintStart_toEndOf="@+id/sensePts"
        app:layout_constraintTop_toBottomOf="@+id/senseInc" />

    <TextView
        android:id="@+id/speedDesc"
        android:layout_width="132dp"
        android:layout_height="74dp"
        android:layout_marginBottom="50dp"
        android:text="Each point increases how fast it moves at the cost of energy"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/guideline2"
        app:layout_constraintStart_toStartOf="@+id/guideline"
        app:layout_constraintTop_toBottomOf="@+id/speedTxt" />

    <TextView
        android:id="@+id/senseDesc"
        android:layout_width="134dp"
        android:layout_height="62dp"
        android:layout_marginBottom="50dp"
        android:text="Each point increases how far it can see"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/guideline4"
        app:layout_constraintStart_toStartOf="@+id/guideline2"
        app:layout_constraintTop_toBottomOf="@+id/senseTxt" />

    <TextView
        android:id="@+id/breedDesc"
        android:layout_width="131dp"
        android:layout_height="55dp"
        android:layout_marginBottom="50dp"
        android:text="Each point increases how much it breeds"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/guideline3"
        app:layout_constraintStart_toStartOf="@+id/guideline4"
        app:layout_constraintTop_toBottomOf="@+id/breedTxt" />

    <TextView
        android:id="@+id/sizeDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:text="Each point adds to the species size, which costs more energy.  Max of 9 points"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/submitBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp"
        android:text="Done"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/guideline"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.15414013" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.4" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.9" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.65" />

    <ImageView
        android:id="@+id/preview"
        android:layout_width="91dp"
        android:layout_height="89dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/guideline"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/submitBtn"
        app:srcCompat="@drawable/textview_border" />

</androidx.constraintlayout.widget.ConstraintLayout>